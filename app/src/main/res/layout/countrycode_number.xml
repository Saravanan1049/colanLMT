<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ccnlabel"
            type="String" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >
    <TextView
        android:id="@+id/itemlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{ccnlabel}"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.hbb20.CountryCodePicker
        android:id="@+id/countryCode_picker"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:ccp_showPhoneCode="false"
        app:ccp_showNameCode="false"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/itemlabel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/left_corner"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="@color/icon_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemlabel"
        app:layout_constraintLeft_toRightOf="@id/countryCode_picker"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"

        />
    <EditText
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:paddingStart="@dimen/padding_start_15dp"
        android:paddingEnd="@dimen/padding_start_15dp"
        android:background="@drawable/right_corner"
        app:layout_constraintLeft_toRightOf="@id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemlabel"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>