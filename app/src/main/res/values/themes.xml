<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ColanLMT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_blue</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">15dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="endIconDrawable">@drawable/ic_down_arrow</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorControlActivated">@android:color/transparent</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="editTextBackground">@android:color/transparent</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>
</resources>